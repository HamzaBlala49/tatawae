<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/eventInfo.css">
    <title>تقييم المتطوع</title>
</head>
<body>
    <main>
         <div class="">
            <div class="row position-relative">
              <div class="col-2 vh-100 position-sticky top-0 end-0 bg-light">
                <%- include('../part/sidebar2.ejs') %>
            </div>
                <div class="col-7">
                    <section class="p-3">
                        <h4 class="fw-bold">تقييم المتطوع</h4>
                        <hr>
                        <button class="backBtn btn h-btn-primary d-flex justify-content-center align-items-center">
                            <i class="fa-solid fa-arrow-right"></i>
                        </button>
                        <section class="m-2 mt-4">
                          <div class="card p-3">
                            <div class="d-flex justify-content-start align-items-center ">
                              <img src="/<%- data.avatar %>" style="width: 90px;height: 90px;object-fit: cover;" class="img-fluid rounded-pill" alt="">
                              <h5 class="fw-semibold me-3"><%- data.username %></h6>
                            </div>
                            <form  class="mt-4" method="post">
                              <div
                                class="table-responsive"
                              >
                                <table
                                  class="table h-text-17"
                                >
                                  <thead>
                                    <tr>
                                      <th scope="col">المعايير</th>
                                      <th scope="col">ضعيف</th>
                                      <th scope="col">مقبول</th>
                                      <th scope="col">جيد</th>
                                      <th scope="col">جيد جيداً</th>
                                      <th scope="col">ممتاز</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    <tr class="">
                                      <td scope="row">الحضور والإلتزام</td>
                                      <td>
                                        <input class="form-check-input" checked type="radio" value="1" name="attendance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input"  type="radio" value="2" name="attendance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="3" name="attendance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="4" name="attendance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="5" name="attendance" id="" />
                                      </td>
                                    </tr>
                                    <tr class="">
                                      <td scope="row">التعاون والمساهمه</td>
                                      <td>
                                        <input class="form-check-input" checked type="radio" value="1" name="cooperation" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="2" name="cooperation" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="3" name="cooperation" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="4" name="cooperation" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="5" name="cooperation" id="" />
                                      </td>
                                    </tr>
                                    <tr class="">
                                      <td scope="row">التفاعل</td>
                                      <td>
                                        <input class="form-check-input" checked type="radio" value="1" name="interaction" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="2" name="interaction" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="3" name="interaction" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="4" name="interaction" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="5" name="interaction" id="" />
                                      </td>
                                    </tr>
                                    <tr class="">
                                      <td scope="row">التقيد بالنظم واللوائح</td>
                                      <td>
                                        <input class="form-check-input" checked type="radio" value="1" name="compliance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="2" name="compliance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="3" name="compliance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="4" name="compliance" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="5" name="compliance" id="" />
                                      </td>
                                    </tr>
                                    <tr class="">
                                      <td scope="row">روح المبادرة</td>
                                      <td>
                                        <input class="form-check-input" checked type="radio" value="1" name="initiative" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="2" name="initiative" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="3" name="initiative" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="4" name="initiative" id="" />
                                      </td>
                                      <td>
                                        <input class="form-check-input" type="radio" value="5" name="initiative" id="" />
                                      </td>
                                    </tr>
                                  
                                  </tbody>
                                </table>
                              </div>



                              <div class="mb-3">
                                <label for="" class="form-label">أيام الحضور</label>
                                <select class="form-select form-select-sm rounded-pill" name="days">
                                 <% for( let i = 1; i <= days; i++ ) { %>
                                    <option value="<%- i %>"><%- i %></option>
                                 <% } %>
                                </select>
                              </div>
                              

                              <div class="mb-3">
                                <label for="" class="form-label fw-bold">المراجعة:</label>
                                <textarea class="form-control h-text-14 rounded-4" name="review" required id=""  rows="5"></textarea>
                              </div>
                              
                              <div class="mb-3">
                                <button type="submit" class="btn h-btn-primary rounded-pill px-3 text-white h-bg-primary-dark">حفظ</button>
                              </div>
                              
                            

                              
                              
                            </form>
                            


                          </div>
                          
                            
                        
                        </section>    
                    </section>
                </div>
             
            </div>
         </div>
    </main>
    <div></div>
    
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
      const pathname =  document.location.pathname.split("/");
      const eventId = pathname[3];
      const volunteerId = pathname[5];
      const action = `/foundation/events/${eventId}/evaluation/${volunteerId}`;
      const form = document.forms[0];
      form.setAttribute("action",action)

      const backBtn = document.querySelector(".backBtn");
      backBtn.addEventListener("click",()=>{
        window.history.back();
      })
    </script>
</body>
</html>