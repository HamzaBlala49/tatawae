<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <title>notifications</title>
</head>
<body>
    <main>
         <div class="">
            <div class="row position-relative">
                <div class="col-2 vh-100 position-sticky top-0 end-0 bg-light">
                    <aside class="p-3">
                        <div class="brand fs-3 mb-3 h-text-primary-dark fw-bold">تطوع</div>
                        <ul class="sidebar-link">
                            <li>
                                <a href="./home.html">
                                    <i class="fa-solid fa-house"></i>
                                    الصفحة الرئيسية
                                </a>
                            </li>
                            <li>
                                <a href="./notifications.html">
                                    <i class="fa-solid fa-bell"></i>
                                    الأشعارات
                                </a>
                            </li>
                            <li>
                                <a href="./events.html">
                                    <i class="fa-solid fa-handshake-angle"></i>
                                    الأحداث التطوعية
                                </a>
                            </li>
                            <li>
                                <a href="./myEvents.html" class="active-link-sidebar">
                                    <i class="fa-solid fa-hands-holding"></i>
                                    المشاركات التطوعية
                                </a>
                            </li>
                            <li>
                                <a href="./profile.html" >
                                    <i class="fa-solid fa-user"></i>
                                    ملفي الشخصي
                                </a>
                            </li>
                            <li class="mt-4">
                                <a href="./profile.html" class="h-bg-primary-light rounded-pill px-2 py-1">
                                    <i class="fa-solid fa-right-from-bracket"></i>
                                    تسجيل الخروج
                                </a>
                            </li>
                        </ul>
                    </aside>
                </div>
                <div class="col-7">
                    <section class="p-3">
                        <h4 class="fw-bold">مشاركاتي التطوعية</h4>
                        <hr>
                        <div class="container">
                            <div class="table-responsive">
                                <table class="table h-text-17 ">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">أسم الحدث</th>
                                            <th scope="col">الحالة</th>
                                            <th scope="col">تقييمي</th>
                                            <th scope="col">تفاصيل</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.reverse().forEach((element,index) => { %>
                                            <tr class="">
                                                <td scope="row"><%- data.length - index %></td>
                                                <td class="fs-6"><%- element.title%></td>
                                                <td>
                                                    <% if ( Date.now() < new Date(element.startDate).getTime() ) { %>
                                                        <span>تجميع الاعضاء</span>
    
                                                    <% } else if ( Date.now() > new Date(element.startDate).getTime() && Date.now() < new Date(element.endDate).getTime() ) { %>
    
                                                        <span>جاري</span>
    
                                                    <% } else { %>
    
                                                        <span>أنتهاء</span>
    
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (Date.now() > new Date(element.endDate).getTime() ) { %>
                                                        <a href="/volunteer/events/<%- element._id %>/evaluation" class="text-decoration-none fs-5 ">
                                                            <i class="fa-solid fa-list-check text-warning"></i>
                                                        </a>
                                                    <% } else{ %>
                                                        <i class="fa-solid fa-list-check text-secondary fs-5"></i>
                                                    <% } %>
    
                                                </td>
                                                <td>
                                                    <a  href="/volunteer/events/<%- element._id %>" class=" fs-6">
                                                        <i class="fa-solid fa-info-circle"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
    
                                    </tbody>
                                </table>
                            </div>
                        </div>
                   </section> 
                </div>
                <div class="col-3">
                    <div class="bg-light p-3">
                        <h5 class="fw-bold">
                            <i class="fa-solid fa-filter"></i>
                            فلترة
                        </h5>
                        <hr>
                        <div class="container">
                            <form class="">
                                <div class="col">
                                    <div class="mb-3">
                                        <label for="" class="form-label fw-bold h-text-17">
                                            بحث
                                            <i class="fa-solid fa-search"></i>
                                        </label>
                                        <input type="text" name="" id="" class="form-control form-control-sm rounded-pill h-text-17" placeholder="تنظيف الشاطئ" aria-describedby="helpId"/>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label fw-bold h-text-17">
                                        <i class="fa-solid fa-map-location"></i>
                                        المدينة
                                    </label>
                                    <select class="form-select form-select-sm  rounded-pill h-text-17" name="" id="">
                                        <option selected>الكل</option>
                                        <option value="">المكلا</option>
                                        <option value="">سيؤون</option>
                                        <option value="">غيل باوزير</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="" class="form-label fw-bold h-text-17">
                                        <i class="fa-solid fa-clipboard-list"></i>
                                        الحالة
                                    </label>
                                    <select class="form-select form-select-sm rounded-pill h-text-17" name="" id="">
                                        <option selected>الكل</option>
                                        <option value="">الحالي</option>
                                        <option value="">طلبات الانضام</option>
                                        <option value="">المنتهي</option>
                                    </select>
                                </div> 

                                <div class="mb-3">
                                    <label for="" class="form-label fw-bold h-text-17">
                                        <i class="fa-solid fa-calendar"></i>
                                        تاريخ البدء
                                    </label>
                                    <input type="date" class="form-control rounded-pill form-control-sm" name="" id="" aria-describedby="helpId" placeholder="" />
                                </div>
 
                                
                            </form>
                            

                        </div>
                    </div>
                </div>
            </div>
         </div>
    </main>
    <div></div>
    
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>